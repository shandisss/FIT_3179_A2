{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 460,
  "autosize": { "resize": true },
  "title": {
    "text": "Self-Sufficiency Ratio (SSR%)",
    "subtitle": "Poultry ≈ self-sufficient; beef/mutton are consistently import-dependent.",
    "anchor": "start",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "data": {
    "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/refs/heads/main/data/MALAY_SARADIRI.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    { "filter": "datum.region == 'Malaysia'" },
    { "calculate": "toNumber(datum.value)", "as": "value_num" },
    { "calculate": "replace(datum.commodity, ' Meat', '')", "as": "meat_type" }
  ],
  "layer": [{
  "data": { "values": [ {} ] },
  "mark": {
    "type": "rect",
    "fill": "white",
    "opacity": 0.85,
    "stroke": "#ccc",
    "strokeWidth": 1,
    "cornerRadius": 6
  },
  "encoding": {
    "x": { "value": 360 },
    "x2": { "value": 590 },
    "y": { "value": 90 },
    "y2": { "value": 170 }
  }
},
{
  "data": {
    "values": [
      {
        "note": "2020 SSR% ranking:\nPoultry > 100% (fully self-sufficient),\nPork ≈ 92% (near self-sufficient),\nBeef & Mutton heavily import-reliant."
      }
    ]
  },
  "mark": {
    "type": "text",
    "align": "left",
    "fontSize": 12,
    "fontWeight": "normal",
    "lineBreak": "\n",
    "color": "#333"
  },
  "encoding": {
    "x": { "value": 375 },
    "y": { "value": 110 },
    "text": { "field": "note" }
  }
},
    {
      "params": [
        {
          "name": "seriesSelect",
          "select": { "type": "point", "fields": ["meat_type"] },
          "bind": "legend"
        }
      ],
      "mark": { "type": "line", "point": true, "interpolate": "monotone" },
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "axis": { "title": "Year", "tickMinStep": 1, "format": "d" ,"grid": false}
        },
        "y": {
          "field": "value_num",
          "type": "quantitative",
          "stack": null,
          "scale": { "domain": [0, 110] },
          "axis": { "title": "SSR (%)" }
          
        },
        "color": {
          "field": "meat_type",
          "type": "nominal",
          "title": "Meat type",
          "scale": { "scheme": "set2" }
        },
        "opacity": { "condition": { "param": "seriesSelect", "value": 1 }, "value": 0.2 },
        "tooltip": [
          { "field": "meat_type", "title": "Meat type" },
          { "field": "year", "type": "quantitative", "title": "Year" },
          { "field": "value_num", "type": "quantitative", "title": "SSR (%)", "format": ".1f" },
          { "field": "flag", "title": "Note" }
        ]
      }
    },
    {
      "data": { "values": [ { "y": 100, "label": "100% self-sufficiency" } ] },
      "mark": { "type": "rule", "strokeDash": [4, 4], "color": "#666" },
      "encoding": {
        "y": { "field": "y", "type": "quantitative" },
        "tooltip": [ { "field": "label", "title": "Reference" } ]
      }
    },
    {
      "data": { "values": [ { "y": 100, "label": "100% self-sufficiency" } ] },
      "mark": { "type": "text", "align": "right", "baseline": "bottom", "dx": -4, "dy": -2, "color": "#666", "fontSize": 11 },
      "encoding": {
        "x": { "datum": 2020 },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "label" }
      }
    }
  ],
  "config": { "view": { "stroke": null } }
}
