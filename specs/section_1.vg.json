{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "autosize": {
        "resize": true
    },
    "data": {
        "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/main/data/ne_110m_admin_0_countries.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "params": [
        {
            "name": "zoom_t",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 1,
                "step": 0.01,
                "name": "Zoom (World â†’ Malaysia): "
            }
        },
        {
            "name": "YearSel",
            "value": 2020,
            "bind": {
                "input": "range",
                "min": 1980,
                "max": 2020,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "MeatSel",
            "value": "Poultry",
            "bind": {
                "input": "select",
                "options": [
                    "Poultry",
                    "Beef & Buffalo",
                    "Sheep & Goat",
                    "Pig"
                ],
                "name": "Meat Type: "
            }
        }
    ],
    "title": {
        "text": "Global Per-Capita Meat Consumption (kg/person/year)",
        "anchor": "start",
        "fontSize": 18
    },
    "width": "container",
    "height": 500,
    "projection": {
        "type": "equalEarth",
        "rotate": [
            -106,
            0,
            0
        ],
        "center": {
            "expr": "[1 * zoom_t, 4 * zoom_t]"
        },
        "translate": [
            500,
            250
        ],
        "scale": {
            "expr": "185 + zoom_t * (2700 - 1500)"
        }
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/refs/heads/main/data/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#eaf4ff"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/refs/heads/main/data/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/refs/heads/main/data/per-capita-meat-type-long.csv"
            },
            "transform": [
                {
                    "filter": "datum.meat_type == MeatSel"
                },
                {
                    "filter": "toNumber(datum.year) == YearSel"
                },
                {
                    "calculate": "toNumber(datum.value_kg_pc)",
                    "as": "value_num"
                },
                {
                    "calculate": "datum.value_num > 0 ? datum.value_num : null",
                    "as": "value_for_log"
                },
                {
                    "lookup": "code",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/main/data/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.ISO_A3",
                        "fields": [
                            "type",
                            "geometry",
                            "properties"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white"
            },
            "params": [
                {
                    "name": "countrySelection",
                    "select": {
                        "type": "point"
                    }
                }
            ],
            "encoding": {
                "shape": {
                    "field": "geometry",
                    "type": "geojson"
                },
                "color": {
                    "condition": [
                        {
                            "test": "!isValid(datum.value_num) || datum.value_num <= 0",
                            "value": "#e6e6e6"
                        }
                    ],
                    "field": "value_for_log",
                    "title": "kg/person",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "oranges",
                        "domainMin": 0.01,
                        "clamp": true
                    }
                },
                "tooltip": [
                    {
                        "field": "country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "value_num",
                        "type": "quantitative",
                        "format": ".1f",
                        "title": "Per-Capita"
                    },
                    {
                        "field": "year",
                        "type": "ordinal",
                        "title": "Year"
                    },
                    {
                        "field": "meat_type",
                        "type": "nominal",
                        "title": "Meat Type"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/shandisss/FIT_3179_A2/refs/heads/main/data/countryInfo.csv"
                        },
                        "key": "name",
                        "fields": [
                            "latitude",
                            "longitude"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "text"
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "text": {
                    "field": "properties.NAME",
                    "type": "nominal"
                },
                "color": {
                    "condition": {
                        "test": "datum['properties.NAME'] == 'Malaysia'",
                        "value": "#010101"
                    },
                    "value": "#FDFCFC"
                },
                "opacity": {
                    "condition": [
                        {
                            "test": "zoom_t <= 0.35 && indexof(['Malaysia'], datum['properties.NAME']) >= 0",
                            "value": 1
                        },
                        {
                            "test": "zoom_t > 0.35 && indexof(['Sri Lanka','Malaysia','Singapore','Thailand','Indonesia','Brunei','Vietnam','Philippines','Cambodia','Laos','Myanmar','Papua New Guinea'], datum['properties.NAME']) >= 0",
                            "value": 1
                        }
                    ],
                    "value": 0
                }
            }
        }
    ]
}